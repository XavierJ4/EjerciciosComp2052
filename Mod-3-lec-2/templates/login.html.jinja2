{% extends "base.html" %}

{% block content %}
<div class="container">
  <h2>Iniciar Sesión</h2>
  <form method="POST">
    <div>
      <label for="username">Usuario</label>
      <input type="text" id="username" name="username" required style="flex: 1;padding: 10px;font-size: 1rem;border: 1px solid #ccc;border-radius: 4px;margin-bottom: 10px;">
    </div>
    <div>
      <label for="password">Contraseña</label>
      <input type="password" id="password" name="password" required>
    </div>
    <div>
      <button type="submit" class="btn btn-primary">Iniciar Sesión</button>
    </div>
  </form>
</div>
{% endblock %}